@using Weekend.BLL.DTO
@model UserDTO
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@($"{Model.FirstName} {Model.LastName}")</title>
    <link rel="stylesheet" href="~/css/ProfileCss.css">
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Roboto:300,400,500&display=swap" 
    rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/pics/favicon.ico">
</head>
<body>
    <main>
    <aside>
    <img src="~/pics/Logo.svg" class="Logo">

    <div id="Profile">
    <img src="~/pics/Ava.jpg" class="ava">

    <div class="dd"> 
        <a href="#" class="name">@($"{Model.FirstName} {Model.LastName}")</a>
    <p class="Myprofile">My profile</p>
    </div>

    <a href="#"><img src="~/pics/Settings.svg" class="Settings"></a>
    <a href="/Login/LogOut"><img src="~/pics/Logout.svg" class="Logout"></a>
    </div>

    <ul>
        <li><img src="~/pics/News.svg" alt="" class="AsideImg"><a href="#">News</a></li> 
        <li><img src="~/pics/Message.svg" class="AsideImg"><a href="#">Messages</a></li>
        <li><img src="~/pics/Friends.svg" class="AsideImg"><a href="#">Friends</a></li>
        <li><img src="~/pics/Communities.svg" class="AsideImg"><a href="#">Communitites</a></li>
        <li><img src="~/pics/Music.svg" class="AsideImg"><a href="#">Music</a></li>
        <li><img src="~/pics/Photo.svg" class="AsideImg"><a href="#">Photos</a></li>
        <li><img src="~/pics/Video.svg" class="AsideImg"><a href="#">Videos</a></li>
    </ul>

    <div class="audio">
        <img src="~/pics/Audio.jpg" class="Cover">

        <div class="NameOfMusic">
        <p class="Artist">unxknow</p>
        <p class="SoundName">На корвалоле</p>
        </div>

        <img src="~/pics/Arrow-left.svg" class="Arrow-left">
        <img src="~/pics/Pause.svg" class="Pause">
        <img src="~/pics/Arrow-right.svg" class="Arrow-right">
    </div>
    </aside>

    <section id="MyPage">
        <div class="Info">

        <div class="ButtonAva">

            <a href="#">
            <div class="left-circle"><img src="~/pics/Message.svg"></div>
            </a>

            <img src="~/pics/Ava.jpg" class="Avatar">

            <a href="#">
            <div class="right-circle"><img src="~/pics/Friends.svg"></div>
            </a>
        </div>
        

        <div class="dd3">
        <div class="Imya">
        <h1>@($"{Model.FirstName} {Model.LastName}")</h1>
        <p class="online">Online</p>
        </div>

        <div class="status"><p>Dead inside</p></div>
        
        <div class="dd2">
        <ul>
            <li>
                <p class="Question">Sex:</p>
                <div class="Answer">Male</div>
            </li>

            <li>
                <p class="Question">Birthday:</p>
                <div class="Answer">@(Model.Birthday.Date.ToString("dd/MM/yy"))</div>
            </li>
            <li>
                <p class="Question">Language:</p>
                <div class="Answer">Russian</div>
            </li>
            <li>
                <p class="Question">Relationship:</p>
                <div class="Answer">@(Model.Relationship)</div>
            </li>
        </ul>
        

         

        <div class="Icons">

        <a href="#">
            <div>
        <img src="~/pics/FriendsP.svg">
        <p>Friends
            <span class="span">35</span>
        </p>
        </div>
        </a>

        <a href="#">
        <div>
        <img src="~/pics/MusicP.svg">
        <p>Music
            <span class="span">127</span>
        </p>
        </div>
        </a>

        <a href="#">
        <div>
        <img src="~/pics/PhotoP.svg">
        <p>Photos
            <span class="span">17</span>
        </p>
        </div>
        </a>

        <a href="#">
        <div>
        <img src="~/pics/VideoP.svg">
        <p>Videos
            <span class="span">35</span>
        </p>
        </div>
        </a>
        </div>

    </div>
    </div>

        </div>
        <div class="textarea"><img src="~/pics/Ava.jpg"><p>What's news?</p>
        <img src="~/pics/Music.svg">
        <img src="~/pics/Photo.svg">
        <img src="~/pics/Video.svg">
        </div>

    </section>

    

    </main>
</body>
</html>
